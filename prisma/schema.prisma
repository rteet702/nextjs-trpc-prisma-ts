generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    firstName String
    lastName String
    email String @unique
    password String
    messages Message[]
}

model Message {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    content String
    author User @relation(fields: [authorId], references: [id])
    authorId String
}

